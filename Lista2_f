#include<stdio.h>
void main ()

{
int A, B, C, aux;
printf ("Digite o valor de A: ");
scanf ("%d", &A);

printf ("Digite o valor de B: ");
scanf ("%d", &B);

printf ("Digite o valor de C: ");
scanf ("%d", &C); 

if (A>B)
{
    aux = A;
    A = B;
    B = aux;
}

if(A>C)
{
    aux = A;
    A = C;
    C = aux;
}

if(B>C)
{
    aux = B;
    B = C;
    C = aux;
}

printf ("%d,%d,%d", A, B, C);
}

#include<stdio.h>
void main ()

{
    float N1, N2, N3, N4, MD;
    printf ("Digite o valor de N1:", N1);
    scanf ("%f",&N1);

    printf ("Digite o valor de N2:", N2);
    scanf ("%f",&N2);

    printf ("Digite o valor de N3:", N3);
    scanf ("%f",&N3);

    printf ("Digite o valor de N4:", N4);
    scanf ("%f",&N4);

    MD=(N1+N2+N3+N4)/4;

    if (MD>=5)
    {
        printf ("Media: %.1f \nAPROVADO!!!", MD);
    }

    else
    {
        printf ("Media: %.1f \nREPROVADO :( ", MD);
    }

}
